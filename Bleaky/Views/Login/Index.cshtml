@{
    Layout = "Shared/_Layout.cshtml";
}
<div class="blLoginDiv" ng-controller="LoginCtrl">
    <h3>Log In</h3>
    <form class="form-horizontal blLogin">
        <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-5">
                <input type="text" class="form-control input-small" id="inputEmail" ng-model="loginEmail" placeholder="Email">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-5">
                <input type="password" class="form-control input-small" id="inputPassword" ng-model="loginPassword" placeholder="Password">
                <br />
                <div class="alert alert-danger" ng-show="hasLoginError">{{loginErrorMessage}}</div>
                <button type="submit" class="btn btn-medium btn-default" ng-click="signIn()">Sign in</button>
            </div>
        </div>
    </form>
    <a id="Register"></a>
    <h3>New to Bleaky?</h3>
    <h5>Sign up</h5>
    <form class="form-horizontal">
        <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-5">
                <input type="text" class="form-control input-small" id="inputEmail" ng-model="inputEmail" placeholder="Email">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-5">
                <input type="password" class="form-control input-small" id="inputPassword" ng-model="inputPassword" placeholder="Password">
            </div>
        </div>
        <div class="form-group">
            <label for="inputConfirmPassword" class="col-lg-2 control-label">Confirm password</label>
            <div class="col-lg-5">
                <input type="password" class="form-control input-small" id="inputConfirmPassword" ng-model="inputConfirmPassword" placeholder="Confirm password">
                <br />
                <div class="alert alert-danger" ng-show="hasError">{{errorMessage}}</div>
                <button type="submit" class="btn btn-medium btn-primary" ng-click="verifyRegistration()">Sign up for Bleaky</button>
            </div>
        </div>
    </form>
</div>
